/var/log/slurm-llnl/slurmd.log /var/log/slurm-llnl/slurmctld.log {
  compress
  missingok
  nocopytruncate
  nocreate
  nodelaycompress
  nomail
  notifempty
  noolddir
  rotate 12
  sharedscripts
  size=5M
  postrotate
      /usr/sbin/invoke-rc.d --quiet slurm-llnl reconfig >/dev/null
  endscript
}
